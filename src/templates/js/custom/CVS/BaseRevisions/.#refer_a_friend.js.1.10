function getInviteFriendResponse(result) {
    console.log(result);
    if(validateSession(result) == false)
        return false;

    var res = $.parseJSON(result);

    if(res.errorCode != 0) {
        showToolTipErrorManual("id", res.respMsg, "bottom",undefined);
        return false;
    }

}

function validateReferList() {
    var thisRowId=0;
    var isError=false;
    $($("[row-id]")).each(function () {
        if($(this).css('display') != 'none')
        {
            thisRowId = $(this).attr('row-id');
            var name = $("#name-"+thisRowId).val().trim();
            var email = $("#email-"+thisRowId).val().trim();
            validateName("name-"+thisRowId,name) ? isError = false : isError = true;
            validateEmail("email-"+thisRowId,email) ? isError = false : isError = true;
        }
    });

    if(isError)
        return false;
    else
        return true;
}

function validateName(id,name)
{
    if(name.length == 0)
    {
        showToolTipError(id, "Please Enter Your Friend's Name", "bottom", undefined);
        return false;
    }

    var myRegEx  = /^[-\w\s]+$/;
    if(!myRegEx.test(name))
    {
        showToolTipError(id, "Please Enter Alphanumeric Name", "bottom", undefined);
        return false;
    }

    return true;
}

function validateEmail(id,email)
{
    if(email.length == 0)
    {
        showToolTipError(id, "Please Enter Friend's Email ID", "bottom", undefined);
        return false;
    }

    var myRegEx  = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    if(!myRegEx.test(email))
    {
        showToolTipError(id, "Please Enter Correct Email ID", "bottom", undefined);
        return false;
    }

    return true;
}

